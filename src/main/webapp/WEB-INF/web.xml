<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
>

    <servlet>
        <servlet-name>Servlet_SignIn</servlet-name>
        <servlet-class>Servlet_SignIn</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Servlet_SignIn</servlet-name>
        <url-pattern>/Servlet_SignIn</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Servlet_SignUp</servlet-name>
        <servlet-class>Servlet_SignUp</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Servlet_SignUp</servlet-name>
        <url-pattern>/Servlet_SignUp</url-pattern>
    </servlet-mapping>

</web-app>